<div class="row">
  <div class="small-12 columns">
    <form {{action 'updateCurrentUser' on='submit'}}>
      <fieldset>
        <legend>Account</legend>
        {{input placeholder="Email" value=model.currentUser.email}}
        <button class="expand" type="submit">Update</button>
        <button class="expand" {{action 'invalidate' target=session}}>Sign Out</button>
      </fieldset>
    </form>

    <div class="row">
      <fieldset>
        <legend>Address</legend>
        {{yebo-show-address address=model.currentAddress}}
      </fieldset>
    </div>
  </div>
</div>
