<div class="row">
  <div class="small-12 medium-6 large-4 medium-offset-3 large-offset-4 columns">
    <form {{action 'submit' on='submit'}}>
      <fieldset>
        <legend>Reset Password</legend>

        {{#if passwordRested}}
          <div class="message-box">
            Your password was redefined
            <br />
            {{link-to 'Login page' 'yebo.signin'}}
          </div>
        {{else}}
          {{yebo-input value=password
                       errors=errors.password
                       type="password"
                       attributeName="Password"
                       placeholder="Password"}}

          {{yebo-input value=passwordConfirmation
                       errors=errors.passwordConfirmation
                       type="password"
                       attributeName="Password Confirmation"
                       placeholder="Password Confirmation"}}

          {{#if errors}}
            <div class="errors">
              {{errors}}
            </div>
          {{/if}}

          <button type="submit" class="expand">Reset password</button>
        {{/if}}
      </fieldset>
    </form>
  </div>
</div>
